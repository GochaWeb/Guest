<script>
    $(document).ready(function () {
        $('.close-wrapper').click(function () {
            var x = confirm('დარწმუნებული ხარ?');
            if (x) {
                return true;
            } else {
                return false;
            }
        });

    });
</script>
<script>
    $(document).ready(function () {
        $('#BigTextEng').val('@ViewBag.ToursEng.BigText')
        $('#BigTextRus').val('@ViewBag.ToursRus.BigText')
        $('#BigTextGeo').val('@ViewBag.ToursGeo.BigText')

    });

</script>
